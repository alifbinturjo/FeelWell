                        android:buttonTint="@color/teal_700" />
                </RadioGroup>
            </LinearLayout>

            <!-- Question 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
