                    android:id="@+id/radioGroupQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/radioQ1_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not at all"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:tag="0"/>

                    <RadioButton
                        android:id="@+id/radioQ1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Several days"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:tag="1"/>

                    <RadioButton
                        android:id="@+id/radioQ1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More than half the days"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:tag="2"/>

                    <RadioButton
                        android:id="@+id/radioQ1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nearly every day"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:tag="3"/>
                </RadioGroup>

                <!-- Q2: Feeling down, depressed, or hopeless? -->
