<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Horizontal Gradient Bar (Total Score) -->
    <View
        android:id="@+id/horizontalBar"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:background="@drawable/gradient_bar"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <!-- User Score Indicator -->
    <View
        android:id="@+id/userScoreIndicator"
        android:layout_width="4dp"
        android:layout_height="30dp"
        android:background="#000000"
        android:layout_alignTop="@id/horizontalBar"
        android:layout_alignBottom="@id/horizontalBar"/>

    <!-- Good Level Text -->
    <TextView
        android:id="@+id/goodLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/horizontalBar"
        android:layout_alignStart="@id/horizontalBar"
        android:layout_marginTop="8dp"/>

    <!-- Bad Level Text -->
    <TextView
        android:id="@+id/badLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bad"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/horizontalBar"
        android:layout_alignEnd="@id/horizontalBar"
        android:layout_marginTop="8dp"/>

    <!-- Severity Level Text -->
    <TextView
        android:id="@+id/severityLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Severity Level: "
        android:layout_below="@id/goodLevelText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- View Assigned Task Button -->
    <Button
        android:id="@+id/viewTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Assigned Task"
        android:layout_below="@id/severityLevelText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

</RelativeLayout>