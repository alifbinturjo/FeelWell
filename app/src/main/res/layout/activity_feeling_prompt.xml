<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Question -->
    <TextView
        android:id="@+id/feelingQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling now?"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Buttons for feelings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/feelingQuestion"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnDepressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depression"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnAnxiety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anxiety"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnStressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stress"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All of the Above"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnLowSelfEsteem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Self-Esteem"
            android:layout_marginBottom="16dp"/>


    </LinearLayout>

</RelativeLayout>
